<?xml version="1.0"?>
<object name="vindula.food.restaurantes" 
   		meta_type="Dexterity FTI"
   		i18n:domain="vindula.food" 
		xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 
 <!-- Basic metadata -->
 <property name="title" i18n:translate="">Vindula Lista de Parceiros</property>
 <property name="description" i18n:translate="">Cria um conteúdo para administração e gerência dos Parceiros do portal.</property>
 <property name="content_icon">++resource++vindula.food/images/restaurant.png</property>
 <property name="allow_discussion">True</property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types" />
    
 <!-- schema interface -->
 <property name="schema">vindula.food.content.IListRestaurantes</property> 

 <!-- add permission -->
 <property name="add_permission">cmf.AddPortalContent</property>>
 
 <!-- enabled behaviors -->
